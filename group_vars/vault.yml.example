---
# Ansible Vault - Encrypted Secrets
# 
# This is an EXAMPLE template. Create actual vault.yml with:
#   ansible-vault create group_vars/vault.yml
# 
# Then encrypt it with:
#   ansible-vault encrypt group_vars/vault.yml
#
# Edit encrypted file:
#   ansible-vault edit group_vars/vault.yml

###############################################################################
# COCKROACHDB PASSWORDS
###############################################################################

vault_cockroachdb_app_password: "CHANGE_ME_STRONG_PASSWORD"
vault_cockroachdb_readonly_password: "CHANGE_ME_STRONG_PASSWORD"
vault_cockroachdb_backup_password: "CHANGE_ME_STRONG_PASSWORD"
vault_cockroachdb_root_password: "CHANGE_ME_STRONG_PASSWORD"

###############################################################################
# KUBERNETES SECRETS
###############################################################################

vault_kubernetes_join_token: "CHANGE_ME_AUTO_GENERATED"
vault_kubernetes_ca_key: "CHANGE_ME_AUTO_GENERATED"
vault_kubernetes_admin_token: "CHANGE_ME_AUTO_GENERATED"

###############################################################################
# HAPROXY SECRETS
###############################################################################

vault_haproxy_stats_password: "CHANGE_ME_STRONG_PASSWORD"
vault_keepalived_password: "CHANGE_ME_STRONG_PASSWORD"

###############################################################################
# MONITORING SECRETS
###############################################################################

vault_grafana_admin_password: "CHANGE_ME_STRONG_PASSWORD"
vault_grafana_secret_key: "CHANGE_ME_RANDOM_64_CHAR_STRING"

# SMTP configuration
vault_smtp_host: "smtp.example.com:587"
vault_smtp_user: "noreply@veriaction.com"
vault_smtp_password: "CHANGE_ME_SMTP_PASSWORD"

# Alerting integrations
vault_slack_webhook_url: "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
vault_pagerduty_integration_key: "CHANGE_ME_PAGERDUTY_KEY"

###############################################################################
# DOCKER REGISTRY
###############################################################################

vault_docker_registry_username: "veriaction"
vault_docker_registry_password: "CHANGE_ME_GITHUB_PAT"
vault_docker_registry_email: "ops@veriaction.com"

###############################################################################
# GEOIP SERVICE
###############################################################################

vault_geoip_maxmind_license_key: "CHANGE_ME_MAXMIND_LICENSE"
vault_geoip_api_key: "CHANGE_ME_RANDOM_API_KEY"

# Database connection string
vault_geoip_db_connection_string: "postgresql://veriaction_app:{{ vault_cockroachdb_app_password }}@cockroachdb:26257/veriaction?sslmode=verify-full"

###############################################################################
# S3/CLOUD STORAGE (for backups)
###############################################################################

vault_s3_access_key_id: "CHANGE_ME_S3_ACCESS_KEY"
vault_s3_secret_access_key: "CHANGE_ME_S3_SECRET_KEY"
vault_s3_region: "eu-west-1"

###############################################################################
# SSL/TLS CERTIFICATES
###############################################################################

# If using pre-generated certificates, store them here
# Otherwise, certificates will be auto-generated by Ansible

# vault_ssl_ca_cert: |
#   -----BEGIN CERTIFICATE-----
#   ...
#   -----END CERTIFICATE-----

# vault_ssl_ca_key: |
#   -----BEGIN PRIVATE KEY-----
#   ...
#   -----END PRIVATE KEY-----

###############################################################################
# GDPR ENCRYPTION KEYS
###############################################################################

vault_gdpr_encryption_key: "CHANGE_ME_32_BYTE_HEX_KEY"
vault_gdpr_audit_encryption_key: "CHANGE_ME_32_BYTE_HEX_KEY"
