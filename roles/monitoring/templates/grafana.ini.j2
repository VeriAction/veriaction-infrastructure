# Grafana Configuration - Managed by Ansible

[server]
protocol = http
http_addr = 0.0.0.0
http_port = 3000
domain = {{ grafana_domain | default(ansible_default_ipv4.address) }}
root_url = %(protocol)s://%(domain)s:%(http_port)s/

[database]
type = sqlite3
path = /var/lib/grafana/grafana.db

[security]
admin_user = admin
admin_password = {{ grafana_admin_password }}
secret_key = {{ grafana_secret_key | default('SW2YcwTIb9zpOOhoPsMm') }}

[users]
allow_sign_up = false

[auth.anonymous]
enabled = false

[alerting]
enabled = true

[metrics]
enabled = true

[logs]
mode = file
level = info
